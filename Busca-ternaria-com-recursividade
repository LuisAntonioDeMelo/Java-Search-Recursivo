  public static int Busca(int arr[], int ent){
        return buscaTernaria(arr, ent, 0, arr.length-1);
    }
    
    public static int buscaTernaria(int arr[], int ent, int inicio, int fim){
        if(inicio > fim){
            return -1;
        }   
        // tanto o meio 1 como o 2 seram posições no array que
        // comparam os valores contidos neles
        
        int meio1 = inicio + (fim - inicio)/3;  //supondo que seja 9 o valor do ultimo
                                                    //valor 1 sera 0 + ultimo-1/3 
                                                    //caso o ultimo seja 9
                                                    // valor sera 3
        int meio2 = inicio + 2*(fim - inicio)/3; // meio 2 = sera 0+ 18/3  = 6
        if(arr[meio1] == ent){
            return meio1; // se for iqual acaba aqui
        }
        else if(arr[meio2] == ent){
            return meio2; // ou se for iqual ao meio 2 caba aqui
        }
        // usando recursão para comparar denovo
        else if(ent < arr[meio1]){ // nesse caso valor da entrada for menor que arrayna posicão meio
                                   // ele ira repetidir o meio1 menor -1 
                                   // nosso caso o meio1 era 3, agora sera na posição 2
                                   // e executará  busca ternaria novamente 
            return buscaTernaria(arr, ent,inicio, meio1-1);
        }
                                // no caso se a entrada for maior que o meio 2
        else if(ent > arr[meio2]){
                                    //no caso do valor da entrada for maior que o meio2
                                    //entao ele irá buscar denovo na entrada e meio2 +1
                                    // nesse caso como o meio 2 era 6 entao ele
                                    // ira verificar no 7
            return buscaTernaria(arr, ent, meio2+1 , fim);
        }
        else{
            return buscaTernaria(arr, ent, meio1, meio2);
                                    // aqui caso nao seja nenhume ele irá rercusivar 
                                   
        }
    }

    public static void main(String[] args) {
        Scanner inp = new Scanner(System.in);
        int array[] = {2, 5, 10,13,18,21,22,25,29,31,36,44,47,49,50,62,67,92,110,112,125,132,139,140,148,151};
        for(int i = 0; i < array.length;i++){
            System.out.print(" ["+array[i]+"] ");
        }

        
        System.out.print("\nPesquise no array :");
        int pesquisa = inp.nextInt();
        int resultado = Busca(array,pesquisa);
        if(resultado == -1){
            System.out.println("Esse valor não existe");
        }else{
            System.out.println("O elemento esta presente na posição "+ (resultado+1));
        }
        
    }
    
}
